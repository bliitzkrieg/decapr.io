!!! 5
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "decapr.io"
    = stylesheet_link_tag :application, :media => "all", 'data-turbolinks-track' => true
    = stylesheet_link_tag :application, :meddia => "all", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
    
    = javascript_include_tag :application, 'data-turbolinks-track' => true
    = csrf_meta_tags
  </head
  %body#page-top
    %nav.navbar.navbar-default.navbar-fixed-top
      %div.container
        %div.navbar-header.page-scroll
          %button.navbar-toggle{"data-toggle" => "collapse", "data-target" => "#bs-example-navbar-collapse-1"}
            %span.sr-only
              Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand.page-scroll{"href" => "#page-top"}
            decapr.io
        %div.collapse.navbar-collapse#bs-example-navbar-collapse-1
          %ul.nav.navbar-nav.navbar-right
            %li.hidden
              %a{"href" => "#page-top"}
            %li.page-scroll
              = link_to "Blog", posts_path
            %li.page-scroll
              %a{"href" => "#"}
                Contact
            %li.page-scroll
              %a{"href" => "#"}
                Portfolio
            %li.page-scroll
              %a{"href" => "#"}
                Login

    .container
      = yield
  </body
</html
